<Page
    x:Class="FinancialMaker.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinancialMaker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="MainGrid" Background="BlueViolet">
        <Grid.RowDefinitions>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="StepFrame"></Frame>
        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="StepName" Foreground="White" FontSize="{ThemeResource HubHeaderThemeFontSize}" VerticalAlignment="Center" HorizontalAlignment="Center">Step 1: Test</TextBlock>
                <Button Margin="0,20,0,0" HorizontalAlignment="Center"  MinWidth="200" Height="50" x:Name="ContinueButton">
                    <TextBlock Text="" Foreground="White" x:Name="ContinueTextBlock"></TextBlock>
                </Button>
            </StackPanel> 
            


        </Grid>
        </Grid>
</Page>



